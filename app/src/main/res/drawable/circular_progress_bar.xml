<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="990">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="14.0">

        <gradient
            android:centerColor="@color/AirQ_Blue"
            android:endColor="@color/AirQ_White"
            android:startColor="@color/AirQ_Blue"
            android:angle="0"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>