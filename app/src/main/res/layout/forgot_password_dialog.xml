<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_one_button_txt_dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/SanyuktText_Blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/id_forgot_password_txt_dialog_hdr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dialog_header_v_margin"
                android:paddingLeft="@dimen/dialog_header_h_margin"
                android:paddingTop="@dimen/dialog_header_v_margin"
                android:text="Forgot Password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/SanyuktText_Blue"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/id_forgot_password_dialog_close_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dialog_header_h_margin"
                android:paddingRight="@dimen/dialog_header_h_margin"
                android:src="@mipmap/ic_close"
                />
        </RelativeLayout>

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/id_forgot_password_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
            android:gravity="center"
            android:hint="Enter your registered Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Sanyukt_Grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_forgot_password_dialog_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dialog_actions_b_margin"
            android:layout_marginRight="@dimen/dialog_action_btn_h_space"
            android:background="@color/SanyuktText_Blue"
            android:gravity="center"
            android:paddingBottom="@dimen/dialog_action_btn_v_padding"
            android:paddingLeft="@dimen/dialog_action_btn_h_padding"
            android:paddingRight="@dimen/dialog_action_btn_h_padding"
            android:paddingTop="@dimen/dialog_action_btn_v_padding"
            android:text="send"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_blue_edge_height"
            android:background="@color/SanyuktText_Blue" />
    </LinearLayout>

