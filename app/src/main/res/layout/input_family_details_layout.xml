<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/family_details"
        android:textAlignment="center" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_family_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Family Value"
        app:ms_multiline="true" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_family_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Family Type"
        app:ms_multiline="true" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_family_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Family status"
        app:ms_multiline="true" />

    <EditText
        android:id="@+id/id_input_father_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mother Name" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_father_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Father Occupation"
        app:ms_multiline="true" />

    <EditText
        android:id="@+id/id_input_mother_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Father Name" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_mother_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Mother Occupation"
        app:ms_multiline="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/id_input_no_of_brother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_of_brother"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/id_input_maried_brothers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:cursorVisible="false"
                android:hint="married "/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/id_input_no_of_sisters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_of_brother"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/id_input_maried_sisters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:cursorVisible="false"
                android:hint="married "/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>