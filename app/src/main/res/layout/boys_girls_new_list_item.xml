<?xml version="1.0"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_patient_list_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/id_patient_list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/patient_list_item_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/id_sanyukt_list_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumit"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/darker_grey"
                android:textSize="@dimen/heading"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_sanyukt_list_member_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B.tech (Civil)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/darker_grey"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/id_sanyukt_list_member_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="26 yr, 5'5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/darker_grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/id_sanyukt_list_member_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Jaipur"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darker_grey"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/id_sanyukt_list_member_created_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Profile created By : Satish kumar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/darker_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_sanyukt_list_member_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Last Login : 14-5-2017"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/darker_grey"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_patient_list_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/id_patient_list_item_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/id_patient_list_item_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>