<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/education_and_professional_info"
        android:textAlignment="center"
        android:textSize="@dimen/form_heading" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Education"
        app:ms_multiline="true" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_education_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Education Details"
        app:ms_multiline="true" />

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_employement_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Employement In"
        app:ms_multiline="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_input_employement_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <com.namdev.sanyukt.views.MaterialSpinner
        android:id="@+id/id_input_annual_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="@color/disabled_color"
        app:ms_arrowSize="16dp"
        app:ms_floatingLabelText="Annual Income"
        app:ms_multiline="true" />
</LinearLayout>