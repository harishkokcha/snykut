<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_fragment_recycle_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_add_family"
            android:layout_alignParentTop="true"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/txt_add_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:background="@drawable/background_app_button"
            android:paddingBottom="@dimen/padding_default"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:visibility="gone"
            android:paddingRight="@dimen/padding_xxlarge"
            android:paddingTop="@dimen/padding_default"
            android:text="Add New Family Member"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </RelativeLayout>


    <include
        android:id="@+id/id_activity_branch_list_progess_bar"
        layout="@layout/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</RelativeLayout>