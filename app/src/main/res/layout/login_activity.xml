<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.namdev.sanyukt.views.CustomTextView
                android:id="@+id/id_profile_form_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingLeft="@dimen/profile_form_item_icon_r_margin"
                android:paddingRight="@dimen/profile_form_item_icon_r_margin"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:text="@string/phone_icon"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.namdev.sanyukt.views.CustomTextView
                android:id="@+id/id_profile_form_user_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingEnd="@dimen/profile_form_item_r_margin"
                android:paddingRight="@dimen/profile_form_item_r_margin"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:text="@string/pancil_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/id_profile_form_phone_cnty_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/id_profile_form_phone_icon"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:text="+91 "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/AirQText_DGray"
                android:textSize="@dimen/heading1" />

            <EditText
                android:id="@+id/edt_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/id_profile_form_phone_cnty_code"
                android:layout_toLeftOf="@+id/id_profile_form_user_edit_icon"
                android:layout_toRightOf="@+id/id_profile_form_phone_cnty_code"
                android:background="@android:color/transparent"
                android:hint="@string/mobile"
                android:imeOptions="actionNext"
                android:maxLength="@integer/phone_maxlength"
                android:maxLines="1"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/AirQText_DGray"
                android:textSize="@dimen/heading1"
                android:visibility="visible" />
        </RelativeLayout>

        <include
            android:id="@+id/id_profile_form_divider5"
            layout="@layout/lightdivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.namdev.sanyukt.views.CustomTextView
                android:id="@+id/id_password_form_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingLeft="@dimen/profile_form_item_icon_r_margin"
                android:paddingRight="@dimen/profile_form_item_icon_r_margin"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:text="@string/password_icon"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.namdev.sanyukt.views.CustomTextView
                android:id="@+id/id_password_form_user_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingEnd="@dimen/profile_form_item_r_margin"
                android:paddingRight="@dimen/profile_form_item_r_margin"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:text="@string/pancil_icon"
                android:visibility="visible" />


            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/id_password_form_user_icon"
                android:layout_toLeftOf="@+id/id_password_form_user_edit_icon"
                android:layout_toRightOf="@+id/id_password_form_user_icon"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapSentences|textNoSuggestions"
                android:maxLines="1"
                android:paddingBottom="@dimen/profile_form_item_v_padding"
                android:paddingTop="@dimen/profile_form_item_v_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/AirQText_DGray"
                android:textSize="@dimen/heading1"
                android:visibility="visible" />
        </RelativeLayout>

        <include
            android:id="@+id/id_profile_form_divider5"
            layout="@layout/lightdivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@drawable/background_app_button"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="@string/forgot_password"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="@string/don_t_have_account_sign_up"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>


</ScrollView>